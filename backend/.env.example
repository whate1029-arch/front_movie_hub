# Server Configuration
PORT=3001
NODE_ENV=development
FRONTEND_URL=http://localhost:3000

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/movie_aggregator
DB_HOST=localhost
DB_PORT=5432
DB_NAME=movie_aggregator
DB_USER=username
DB_PASSWORD=password
DB_SSL=false
DB_POOL_MIN=2
DB_POOL_MAX=10

# Redis Configuration (for caching)
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h
API_KEY=your-external-api-key-for-third-party-access

# External APIs
OMDB_API_KEY=your-omdb-api-key
OMDB_API_URL=http://www.omdbapi.com/

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=1000
OPENAI_TEMPERATURE=0.7

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=./logs
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_MAX=5

# Cache Configuration
CACHE_TTL_MOVIES=3600
CACHE_TTL_SEARCH=86400
CACHE_TTL_LLM=86400
CACHE_TTL_TRENDING=1800

# Performance
MAX_BATCH_SIZE=50
API_TIMEOUT=30000
DB_QUERY_TIMEOUT=10000

# Security
HELMET_CSP_ENABLED=true
CORS_ENABLED=true
COMPRESSION_ENABLED=true

# Monitoring
HEALTH_CHECK_INTERVAL=300000
API_USAGE_LOG_ENABLED=true
PERFORMANCE_MONITORING=true

# Scheduled Jobs
TRENDING_UPDATE_CRON=0 0 * * *
CACHE_CLEANUP_CRON=0 2 * * *
USAGE_REPORT_CRON=0 1 * * *

# Development
DEBUG_MODE=false
MOCK_EXTERNAL_APIS=false
SEED_DATABASE=false